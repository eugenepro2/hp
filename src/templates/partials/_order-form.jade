                                input.order-form-accordion__input(type="text" placeholder="Улица") 
                                input.order-form-accordion__input(type="text" placeholder="Дом") 
                                input.order-form-accordion__input(type="text" placeholder="Квартира/Офис") 
                        .order-form-accordion__button Продолжить оформление

                    .order-form-accordion__item
                        .order-form-accordion__head
                            .order-form-accordion__title 3 шаг 
                                span –Контактные данные и подтверждение
                        .order-form-accordion__body
                            .order-form-accordion__col
                                .order-form-accordion__text Заказчик
                                input.order-form-accordion__input(type="text" placeholder="Имя") 
                                input.order-form-accordion__input(type="text" placeholder="Как с вами связаться")                             
                            .order-form-accordion__col
                                .order-form-accordion__text 
                                    span Получатель
                                    label.order-form-accordion__checkbox(for="")
